<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexj.gym.MainMenuActivity"
    android:background="#6bf8ef"
    android:longClickable="false"
    android:nestedScrollingEnabled="false"
    android:backgroundTint="#6bf8ef">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profileButton"
        android:id="@+id/profileButton"
        android:background="#00179c"
        android:textColor="#ffffff"
        android:layout_above="@+id/dietButton"
        android:layout_marginBottom="35dp"
        android:layout_alignLeft="@+id/dietButton"
        android:layout_alignStart="@+id/dietButton"
        android:layout_alignRight="@+id/dietButton"
        android:layout_alignEnd="@+id/dietButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dietButton"
        android:id="@+id/dietButton"
        android:background="#00179c"
        android:textColor="#ffffff"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/exerciseButton"
        android:layout_alignLeft="@+id/exerciseButton"
        android:layout_alignStart="@+id/exerciseButton"
        android:layout_alignRight="@+id/exerciseButton"
        android:layout_alignEnd="@+id/exerciseButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exerciseButton"
        android:id="@+id/exerciseButton"
        android:background="#00179c"
        android:textColor="#ffffff"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/sleepButton"
        android:layout_alignLeft="@+id/sleepButton"
        android:layout_alignStart="@+id/sleepButton"
        android:layout_alignRight="@+id/sleepButton"
        android:layout_alignEnd="@+id/sleepButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleepButton"
        android:id="@+id/sleepButton"
        android:background="#00179c"
        android:textColor="#ffffff"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/progressButton"
        android:layout_alignRight="@+id/progressButton"
        android:layout_alignEnd="@+id/progressButton"
        android:layout_alignLeft="@+id/progressButton"
        android:layout_alignStart="@+id/progressButton" />

    <Button
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progressButton"
        android:id="@+id/progressButton"
        android:textColor="#ffffff"
        android:background="#00179c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/activityTitle"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
